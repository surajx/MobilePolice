<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/abtScrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 

        android:background="@drawable/innerbg">

    <LinearLayout
        android:id="@+id/abtLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <LinearLayout
            android:id="@+id/abtLinearLayoutInner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
                    android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/txtAboutHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/fragment_descText_topMargin"
            android:text="Header"
            android:textColor="@color/header_text"
            android:textSize="@dimen/fragment_header_font" />

        <TextView
            android:id="@+id/txtAboutText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fragment_space_after_descText"
            android:text="Initiate a call back from a remote mobile which has Mobile Police configured.
Enter the pin number and phone number of the remote mobile. Also enter the phone number of the mobile to intiate the call to and hit &apos;Initiate Call Back&apos;."
            android:textColor="@color/general_text"
            android:textSize="@dimen/fragment_info_font" />
    </LinearLayout>
        </LinearLayout>

</ScrollView>