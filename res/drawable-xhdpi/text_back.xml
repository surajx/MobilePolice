<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <corners
          android:radius="8dp" />

    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#CBCBCB"
          android:endColor="#A8BCBF"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#A8BCBF" />
      <corners
          android:radius="8dp" />
      <padding 
          android:left="2dp"
          android:right="2dp"/>

    </shape>
  </item>
</selector>
